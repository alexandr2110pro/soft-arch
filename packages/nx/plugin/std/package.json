{
  "name": "@soft-arch/nx-plugin-std",
  "version": "1.6.1",
  "description": "Standard Nx plugin for SoftArch workspace",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "@soft-arch/source": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "generators.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandr2110pro/soft-arch.git",
    "directory": "packages/nx/plugin/std"
  },
  "homepage": "https://github.com/alexandr2110pro/soft-arch#readme",
  "bugs": {
    "url": "https://github.com/alexandr2110pro/soft-arch/issues"
  },
  "keywords": [
    "nx",
    "plugin",
    "workspace",
    "soft-arch"
  ],
  "author": "SoftArch",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "nx-plugin-std",
    "tags": [
      "npm:public"
    ],
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/nx/plugin/std/dist",
          "main": "packages/nx/plugin/std/src/index.ts",
          "tsConfig": "packages/nx/plugin/std/tsconfig.lib.json",
          "rootDir": "packages/nx/plugin/std/src",
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./packages/nx/plugin/std/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./packages/nx/plugin/std/src",
              "glob": "**/*.d.ts",
              "output": "."
            }
          ]
        }
      }
    }
  },
  "dependencies": {
    "@nx/devkit": "21.5.3",
    "zod": "^3.25.61"
  },
  "peerDependencies": {
    "tslib": ">=2.3.0",
    "vitest": ">=3.2.3",
    "nx": ">=21.1.3 <22.0.0",
    "@nx/devkit": ">=21.1.3 <22.0.0",
    "@nx/eslint": ">=21.1.3 <22.0.0",
    "@nx/js": ">=21.1.3 <22.0.0"
  },
  "generators": "./generators.json"
}
